<body class="register-page bg-body-secondary">
<div class="register-box">
  <div class="register-logo">
    <%= link_to admin_root_url do %>
      <b>Admin</b>LTE
    <% end %>
  </div>
  <div class="card">
    <div class="card-body register-card-body">
      <p class="register-box-msg">Register a new membership</p>

      <%= simple_form_for @user, url: registration_path, method: :post do |f| %>
        <div class="input-group mb-3">
          <%= f.input_field :email_address, class: 'form-control', placeholder: 'Email' %>
          <div class="input-group-text"><span class="bi bi-person"></span></div>
        </div>

        <div class="input-group mb-3">
          <%= f.input_field :password, class: 'form-control', placeholder: 'Password' %>
          <div class="input-group-text"><span class="bi bi-lock-fill"></span></div>
        </div>

        <div class="input-group mb-3">
          <%= f.input_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation' %>
          <div class="input-group-text"><span class="bi bi-lock-fill"></span></div>
        </div>

        <div class="row clearfix">
          <div class="col-8">
            <!--          <div class="form-check">-->
            <!--            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">-->
            <!--            <label class="form-check-label" for="flexCheckDefault">-->
            <!--              I agree to the <a href="#">terms</a>-->
            <!--            </label>-->
            <!--          </div>-->
          </div>
          <div class="col-4">
            <div class="d-grid gap-2">
              <%= f.submit 'Sign In', class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>

      <!--    <div class="social-auth-links text-center mb-3 d-grid gap-2">-->
      <!--      <p>- OR -</p>-->
      <!--      <a href="#" class="btn btn-primary">-->
      <!--        <i class="bi bi-facebook me-2"></i> Sign in using Facebook-->
      <!--      </a>-->
      <!--      <a href="#" class="btn btn-danger">-->
      <!--        <i class="bi bi-google me-2"></i> Sign in using Google+-->
      <!--      </a>-->
      <!--    </div>-->
    </div>
  </div>
</div>
</body>